@model TravelManagementSystem.ViewModels.PlaceModel;
@{
    ViewData["Title"] = "Add City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Content -->
<div class="">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Add Your Business</h2>
                </div>
            </div>
            <div class="col-md-8">
                <div class="contact-form">
                    <form id="contact" asp-action="AddCity" asp-controller="Place" method="post" enctype="multipart/form-data">
                        <div class="row">

                            <br />
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <fieldset>
                                    <label for="title"><span>Located State</span></label>
                                    <select asp-for="StateId" type="text" name="StateId" id="title" class="form-control">
                                        @if (Model.StateList.Count != 0)
                                        {
                                            foreach (var state in Model.StateList)
                                            {
                                                <option value="@state.Value">@state.Text</option>
                                            }
                                        }

                                    </select>
                                    <span asp-validation-for="StateId"></span>
                                </fieldset>
                            </div>



                            <br />
                            <br />
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset>
                                    <label asp-for="CityId"></label>
                                    <input name="name" asp-for="Name" type="text" class="form-control" id="name" placeholder="City Name">
                                    <span asp-validation-for="Name"></span>
                                </fieldset>
                            </div>
                            <br />
                            <br />
                            <div class="col-lg-12">
                                <fieldset>
                                    <textarea asp-for="Description" rows="8" class="form-control" id="message" placeholder="Description" required=""></textarea>
                                </fieldset>
                            </div>


                            <div class="col-lg-12">
                                <fieldset>
                                    <label for="title"><span>Select Images for Place</span></label>
                                    <input asp-for="Images" type="file" name="Images" class="logofield" multiple class="filled-button">
                                </fieldset>
                            </div>

                            <div class="col-lg-12">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="filled-button">Add Business</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>