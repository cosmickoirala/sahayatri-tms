
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sahayatri</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

        <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    @*<link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">*@

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/css/fontawesome.css">
    <link rel="stylesheet" href="~/css/templatemo-sixteen.css">
    <link rel="stylesheet" href="~/css/owl.css">

    <style>
    .input-validation-error {
        border-color: red;
		color: red;
    }
	.field-validation-error{
		color:red;
	}
    </style>
</head>
<body>

        <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>  
       
    <!-- ***** Preloader End ***** -->
    @{
        string activeHome = "";
        string activePlace = "";
        string activeContact = "";
        string activeAbout = "";
        if( ViewData["ActiveMenu"]!= null)
        {
            var activeMenu = ViewData["ActiveMenu"].ToString().Trim().ToUpper();
            if(activeMenu=="HOME")
            {
                activeHome = "active";
            }
            else if(activeMenu=="PLACE")
            {
                activePlace = "active";
            }
            else if(activeMenu=="CONTACT")
            {
                activeContact = "active";
            }
             else if(activeMenu=="ABOUT")
            {
                activeAbout = "active";
            }
           
        }
        

    }
    
    <!-- Header -->
     <header class="">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand" asp-controller="Home" asp-action="Index"><h2>Sahayatri</h2></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item @activeHome">
                <a class="nav-link"  asp-controller="Home" asp-action="Index">Home
                  <span class="sr-only">(current)</span>
                </a>
              </li> 
              <li class="nav-item @activePlace">
                <a class="nav-link"  asp-controller="Place" asp-action="Index">Places</a>
                <span class="sr-only">(current)</span>
              </li>
              <li class="nav-item @activeAbout">
                <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                <span class="sr-only">(current)</span>
              </li>
              <li class="nav-item @activeContact">
                <a class="nav-link"  asp-controller="Home" asp-action="Contact">Contact Us</a>
                <span class="sr-only">(current)</span>
              </li>
              <partial name="_LoginPartial" />
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <!-- Header -->
          <partial name="_MessagePopUp"/>
          @RenderBody()
    
      
            
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Sahayatri - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
       
    <!-- Additional Scripts -->
    <script src="~/js/custom.js"></script>
    <script src="~/js/owl.js"></script>
    <script src="~/js/slick.js"></script>
    <script src="~/js/isotope.js"></script>
    <script src="~/js/accordions.js"></script>

    <script language = "text/Javascript"> 
      cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
      function clearField(t){                   //declaring the array outside of the
      if(! cleared[t.id]){                      // function makes it static and global
          cleared[t.id] = 1;  // you could use true and false, but that's more typing
          t.value='';         // with more chance of typos
          t.style.color='#fff';
          }
      }
    </script>
    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
