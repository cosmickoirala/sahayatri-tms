
@model TravelManagementSystem.ViewModels.LoginAndRegistrationCommon;

	<div class="form-container sign-in-container" href="#signin">
			<form method="POST"   asp-controller="Account" asp-action ="Login" >
				<h1>Sign in</h1>
				<div class="social-container">
					<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
					<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
					<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
				</div>
				<span>or use your account</span><br />
				@if(TempData["SignINError"]  != null)
			{
				<span class="text-danger font-weight-bold">@TempData["SignINError"] </span>
			}
				<input asp-for="LoginModel.Email" placeholder="Email or Username" />
				<span asp-validation-for="LoginModel.Email"></span>
				<input asp-for="LoginModel.Password" placeholder="Password" type="password"/>
				<span asp-validation-for="LoginModel.Password" class="text-danger"></span>
				<a href="#">Forgot your password?</a>
				<button type="submit">Sign In</button>
			</form>
	</div>